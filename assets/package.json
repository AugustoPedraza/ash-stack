{
  "name": "ash-stack-assets",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint svelte/",
    "lint:fix": "eslint svelte/ --fix",
    "lint:a11y": "eslint svelte/ --rule 'svelte/valid-aria-*: error' --rule 'svelte/a11y-*: error'",
    "ux:check": "node scripts/ux-check.js",
